LEECOMANDO:
REM =Lee la linea de comandos===
a$=COMMAND$
        archivo$=a$
        archivo$=ucase$(archivo$)
        archivo$=ltrim$(archivo$)
        archivo$=rtrim$(archivo$)

        if archivo$="" then 
                SCREEN 0
                PRINT "Especificar archivo: PALETA [archivo.AGM]"
                END
        endif

x=instr(archivo$,".")
if x<1 then        
                archivo$=archivo$+".AGM"
endif

if x>0 then        
                archivo$=LEFT$(archivo$,x)
                archivo$=archivo$+"AGM"
endif

REM ===============================

RETURN
CARGAPALETA:

REM carga la paleta de pantalla en matrices de memoria

FOR T&=0& to 255&
        REM lee de memoria
        OUT &HEX3C7, T&
        R=INP &HEX3C9
        G=INP &HEX3C9
        B=INP &HEX3C9
        REM Salva los atributos        
        REM Rojo
        R1(T&)=R
        R2(T&)=R
        REM Verde
        G1(T&)=G
        G2(T&)=G
        REM Azul        
        B1(T&)=B
        B2(T&)=B


NEXT t&

RETURN

AJUSTAPALETA:

REM Ajusta la paleta contenida en matrices R2, G2, B2

FOR T&=0& to 255&
        OUT &HEX3C8, t&
        OUT &HEX3C9, R2(T&)
        OUT &HEX3C9, G2(T&)
        OUT &HEX3C9, B2(T&)

NEXT t&

RETURN
